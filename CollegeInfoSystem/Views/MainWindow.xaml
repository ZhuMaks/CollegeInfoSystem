<Window x:Class="CollegeInfoSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CollegeInfoSystem"
        Title="College Information System" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <Button Content="Студенти" Command="{Binding OpenStudentsViewCommand}" Width="100" Height="30" Margin="10"/>

            <!-- Контейнер для динамічних вьюшок -->
            <ContentControl Content="{Binding CurrentView}" />
        </StackPanel>
    </Grid>
</Window>
