<Window x:Class="CollegeInfoSystem.Views.GroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати Групу" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Назва групи:" />
            <TextBox Text="{Binding GroupName}" />

            <TextBlock Text="Факультет:" />
            <ComboBox ItemsSource="{Binding Faculties}" SelectedItem="{Binding SelectedFaculty}" DisplayMemberPath="FacultyName" />

            <TextBlock Text="Куратор:" />
            <ComboBox ItemsSource="{Binding Teachers}" SelectedItem="{Binding SelectedCurator}" DisplayMemberPath="FullName" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Зберегти" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
                <Button Content="Скасувати" Command="{Binding CancelCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
