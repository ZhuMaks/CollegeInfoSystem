<Window x:Class="CollegeInfoSystem.Views.TeacherDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати Викладача" 
        Height="500" Width="400" 
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Ім'я:" 
                       FontSize="16" 
                       Foreground="{DynamicResource ForegroundBrush}" 
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource TextBoxStyle}" 
                     FontSize="16" 
                     Margin="0,0,0,10"/>

            <TextBlock Text="Прізвище:" 
                       FontSize="16" 
                       Foreground="{DynamicResource ForegroundBrush}" 
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource TextBoxStyle}" 
                     FontSize="16" 
                     Margin="0,0,0,10"/>

            <TextBlock Text="Email:" 
                       FontSize="16" 
                       Foreground="{DynamicResource ForegroundBrush}" 
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource TextBoxStyle}" 
                     FontSize="16" 
                     Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:" 
                       FontSize="16" 
                       Foreground="{DynamicResource ForegroundBrush}" 
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource TextBoxStyle}" 
                     FontSize="16" 
                     Margin="0,0,0,10"/>

            <CheckBox Content="Куратор" 
                      IsChecked="{Binding IsCurator}" 
                      Style="{StaticResource ThemedCheckBoxStyle}" 
                      FontSize="16" 
                      Margin="0,10,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Зберегти" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource MainButtonStyle}" 
                        Width="120" Height="40" Margin="5"/>
                <Button Content="Скасувати" 
                        Command="{Binding CancelCommand}" 
                        Style="{StaticResource MainButtonStyle}" 
                        Width="120" Height="40" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
