<Window x:Class="CollegeInfoSystem.Views.TeacherDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати Викладача" Height="350" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Ім'я:" />
            <TextBox Text="{Binding FirstName}" />

            <TextBlock Text="Прізвище:" />
            <TextBox Text="{Binding LastName}" />

            <TextBlock Text="Email:" />
            <TextBox Text="{Binding Email}" />

            <TextBlock Text="Телефон:" />
            <TextBox Text="{Binding Phone}" />

            <CheckBox Content="Куратор" IsChecked="{Binding IsCurator}" Margin="0,10,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Зберегти" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
                <Button Content="Скасувати" Command="{Binding CancelCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
