<Window x:Class="CollegeInfoSystem.Views.StudentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати Студента" Height="350" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Ім'я:" />
            <TextBox Text="{Binding FirstName}" />

            <TextBlock Text="Прізвище:" />
            <TextBox Text="{Binding LastName}" />

            <TextBlock Text="Email:" />
            <TextBox Text="{Binding Email}" />

            <TextBlock Text="Телефон:" />
            <TextBox Text="{Binding Phone}" />

            <TextBlock Text="Дата народження:" />
            <DatePicker SelectedDate="{Binding DateOfBirth}" />

            <TextBlock Text="Адреса:" />
            <TextBox Text="{Binding Address}" />

            <TextBlock Text="Група:" />
            <ComboBox ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}" DisplayMemberPath="GroupName" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Зберегти" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
                <Button Content="Скасувати" Command="{Binding CancelCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
