<UserControl x:Class="CollegeInfoSystem.Views.StaffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>

            <!-- 🔍 Пошук і фільтри -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox Width="150" Margin="5"
                         Text="{Binding LastNameFilter, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Пошук за прізвищем"/>

                <TextBox Width="150" Margin="5"
                         Text="{Binding PositionFilter, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Фільтр за посадою"/>

                <Button Content="Очистити фільтри" Command="{Binding ClearFiltersCommand}" Width="150" Margin="5"/>
                <Button Content="Звіт у Excel" Command="{Binding ExportToExcelCommand}" Width="150" Margin="5"/>

                <!-- Кнопка Імпорт з Excel (тільки для admin) -->
                <Button Content="Імпорт з Excel" Command="{Binding ImportFromExcelCommand}" Width="150" Margin="5">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentUserRole}" Value="admin">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- 📋 Таблиця працівників -->
            <ListView ItemsSource="{Binding StaffList}" SelectedItem="{Binding SelectedStaff}" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding StaffID}" Width="50"/>
                        <GridViewColumn Header="Ім'я" DisplayMemberBinding="{Binding FirstName}" Width="120"/>
                        <GridViewColumn Header="Прізвище" DisplayMemberBinding="{Binding LastName}" Width="120"/>
                        <GridViewColumn Header="Посада" DisplayMemberBinding="{Binding Position}" Width="150"/>
                        <GridViewColumn Header="Пошта" DisplayMemberBinding="{Binding Email}" Width="200"/>
                        <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- 🔘 Кнопки керування -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <!-- Додати (admin тільки) -->
                <Button Content="Додати" Command="{Binding AddStaffCommand}" Width="100" Margin="5">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentUserRole}" Value="admin">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Оновити (admin тільки) -->
                <Button Content="Оновити" Command="{Binding UpdateStaffCommand}" Width="100" Margin="5">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentUserRole}" Value="admin">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Видалити (admin тільки) -->
                <Button Content="Видалити" Command="{Binding DeleteStaffCommand}" Width="100" Margin="5">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentUserRole}" Value="admin">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
