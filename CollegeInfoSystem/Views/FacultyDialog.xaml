<Window x:Class="CollegeInfoSystem.Views.FacultyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Факультет" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Назва факультету:" />
            <TextBox Text="{Binding Faculty.FacultyName}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Зберегти" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
                <Button Content="Скасувати" Command="{Binding CancelCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
