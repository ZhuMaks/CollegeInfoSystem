<UserControl x:Class="CollegeInfoSystem.Views.StudentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>

            <!-- Пошук і фільтр -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox Width="200" Margin="5"
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
             ToolTip="Пошук за ID або прізвищем"/>

                <ComboBox Width="200" Margin="5"
              ItemsSource="{Binding Groups}" 
              DisplayMemberPath="GroupName"
              SelectedItem="{Binding SelectedGroup}"
              ToolTip="Виберіть групу"/>

                <Button Content="Очистити фільтр" Command="{Binding ClearFiltersCommand}" Width="150" Margin="5"/>
                <Button Content="Звіт у Excel" Command="{Binding ExportToExcelCommand}" Width="150" Margin="5"/>
                <Button Content="Імпорт з Excel" Command="{Binding ImportFromExcelCommand}" Width="150" Margin="5"/>
            </StackPanel>


            <ListView ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding StudentID}" Width="50"/>
                        <GridViewColumn Header="Ім'я" DisplayMemberBinding="{Binding FirstName}" Width="100"/>
                        <GridViewColumn Header="Прізвище" DisplayMemberBinding="{Binding LastName}" Width="100"/>
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="150"/>
                        <GridViewColumn Header="Група" DisplayMemberBinding="{Binding Group.GroupName}" Width="100"/>
                        <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" Width="150"/>
                        <GridViewColumn Header="Дата народження" DisplayMemberBinding="{Binding DateOfBirth}" Width="150"/>
                        <GridViewColumn Header="Адреса" DisplayMemberBinding="{Binding Address}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Додати" Command="{Binding AddStudentCommand}" Width="100" Margin="5"/>
                <Button Content="Оновити" Command="{Binding UpdateStudentCommand}" Width="100" Margin="5"/>
                <Button Content="Видалити" Command="{Binding DeleteStudentCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
