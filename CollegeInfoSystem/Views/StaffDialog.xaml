<Window x:Class="CollegeInfoSystem.Views.StaffDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Працівник" Height="300" Width="400" WindowStartupLocation="CenterOwner">

    <Window.DataContext>
        <Binding Path="Staff" />
    </Window.DataContext>

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Ім'я:" />
            <TextBox Text="{Binding Staff.FirstName}" />

            <TextBlock Text="Прізвище:" />
            <TextBox Text="{Binding Staff.LastName}" />

            <TextBlock Text="Посада:" />
            <TextBox Text="{Binding Staff.Position}" />

            <TextBlock Text="Пошта:" />
            <TextBox Text="{Binding Staff.Email}" />

            <TextBlock Text="Телефон:" />
            <TextBox Text="{Binding Staff.Phone}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Зберегти" Command="{Binding SaveCommand}" Width="100" Margin="5"/>
                <Button Content="Скасувати" Command="{Binding CancelCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
